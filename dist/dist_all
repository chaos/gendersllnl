PATH=/admin/scripts:/admin/bin:$PATH
DIST=/usr/bin/dist2
FANOUT=32
NUMNODES=`nodeattr -n all|wc -l`

while [ $# -gt 0 ]; do
        case $1 in
		-l)
			ls -1 /var/dist/Distfile.* | sed 's/[^\.]*\.//'
			exit 0
			;;
		-i)
			WITHSWITCH=1
			;;
                -w)     
			WOPT="-w$2"
			shift
                        ;;
                -f)
			FANOUT=$2
			shift
			;;
                *)
			ARGS="$ARGS $1"
			;;
	esac
	shift
done

if [ $WITHSWITCH ]; then
        if [ $WOPT ]; then
	    $DIST $WOPT -i $ARGS
	else
	    $DIST -v -i $ARGS
	fi
else
	# big system
	if [ $NUMNODES -gt 4 ]; then
            if [ $WOPT ]; then
                pdsh -b $WOPT -f$FANOUT "$DIST -l "$ARGS"" | sed 's/[^:]*: //'
            else
                pdsh -b -A -v -f$FANOUT "$DIST -l "$ARGS"" | sed 's/[^:]*: //'
            fi    

	# little system
	else
		$DIST $WOPT $ARGS
	fi
fi

exit 0
